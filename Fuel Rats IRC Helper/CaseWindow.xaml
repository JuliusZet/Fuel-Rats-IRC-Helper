<Window x:Class="Fuel_Rats_IRC_Helper.CaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fuel_Rats_IRC_Helper"
        mc:Ignorable="d"
        Title="Case" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="{DynamicResource Fuel Rats Logo}" Stretch="Uniform" Opacity="0.05"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="datagridCaseChat" Grid.Column="0" Loaded="datagridCaseChat_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Timestamp}" Width="auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding SenderNickname}" Width="auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Text}" Width="1*">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Case number">
                <TextBox x:Name="textboxCasenumber" IsReadOnly="True" Loaded="textboxCasenumber_Loaded"/>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="Client's IRC nickname">
                <TextBox x:Name="textboxClientsIrcNickname" IsReadOnly="True" Loaded="textboxClientsIrcNickname_Loaded"/>
            </GroupBox>
            <GroupBox Grid.Row="2" Header="Client's CMDR name">
                <TextBox x:Name="textboxClientsCmdrName" IsReadOnly="True" Loaded="textboxClientsCmdrName_Loaded"/>
            </GroupBox>
            <GroupBox Grid.Row="3" Header="System">
                <TextBox x:Name="textboxSystem" IsReadOnly="True" Loaded="textboxSystem_Loaded"/>
            </GroupBox>
            <GroupBox Grid.Row="4" Header="Platform">
                <TextBox x:Name="textboxPlatform" IsReadOnly="True" Loaded="textboxPlatform_Loaded"/>
            </GroupBox>
            <GroupBox Grid.Row="5" Header="O2">
                <TextBox x:Name="textboxO2" IsReadOnly="True" Loaded="textboxO2_Loaded"/>
            </GroupBox>
            <GroupBox Grid.Row="6" Header="Language">
                <TextBox x:Name="textboxLanguage" IsReadOnly="True" Loaded="textboxLanguage_Loaded"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
